rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: User is signed in
    function isAuthenticated() {
      return request.auth != null;
    }
    // Helper: User owns the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // ðŸ”¥ 1. DIRECTORY CONFIGURATION (Critical for ID Generation)
    // Allows writing to users/directory/freelancers/* and counters
    match /users/directory/{document=**} {
      allow read, write: if isAuthenticated();
    }

    // 2. USERS COLLECTION
    // Standard profile protection
    match /users/{userId} {
      allow create: if isAuthenticated() && isOwner(userId);
      allow read, update: if isAuthenticated() && isOwner(userId);
    }

    // 3. JOBS COLLECTION
    match /jobs/{jobId} {
      allow read, list: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && resource.data.clientId == request.auth.uid;
    }
    
    // 4. PROPOSALS COLLECTION
    match /proposals/{proposalId} {
        allow read: if isAuthenticated();
        // Allow create if auth, ideally should check if 'freelancer' role
        allow create: if isAuthenticated();
    }
  }
}
